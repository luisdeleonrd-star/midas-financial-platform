  "version": "0.1.0",
  "description": "Midas - Plataforma de GestiÃ³n Financiera para Condominios (monorepo)",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.0"
  },
  "scripts": {
    "build": "npm run -w @midas/api-gateway build && npm run -ws --if-present build",
